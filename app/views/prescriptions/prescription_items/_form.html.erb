<div class="space-y-6 sm:space-y-5">
    <%= f.fields_for :prescription_items do |item_form| %>
      <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5">
        <div class="mt-1 sm:col-span-3 sm:mt-0">
          <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6" data-controller="dosage">
            <div class="sm:col-span-2">
              <%= item_form.label :medication_id, class: "block text-sm font-medium text-gray-700" %>
              <%= item_form.collection_select :medication_id, @medications, :id, :name, 
                { prompt: "Select medication" },
                { 
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
                  data: { action: "change->dosage#loadDosages" }
                } 
              %>
            </div>
            
            <div class="sm:col-span-2">
              <%= item_form.label :dosage_id, class: "block text-sm font-medium text-gray-700" %>
              <%= item_form.collection_select :dosage_id, @dosages, :id, :frequency, 
                { include_blank: "Select dosage" },
                { 
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
                  data: { dosage_target: "dosageSelect" }
                }
              %>
            </div>

            <div class="sm:col-span-1">
              <%= item_form.label :duration, class: "block text-sm font-medium text-gray-700" %>
              <%= item_form.number_field :duration, 
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            </div>

            <% if item_form.object.persisted? %>
              <div class="sm:col-span-1">
                <%= item_form.check_box :_destroy %>
                <%= item_form.label :_destroy, "Remove", class: "ml-2 text-sm text-gray-700" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
